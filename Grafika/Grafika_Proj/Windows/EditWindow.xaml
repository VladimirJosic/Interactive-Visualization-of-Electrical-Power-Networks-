<Window x:Class="Grafika_Projekat_PR38_2019.Windows.EditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Grafika_Projekat_PR38_2019.Windows"
        mc:Ignorable="d"
        Title="Edit Shape Window" Height="300" Width="400" WindowStartupLocation="CenterScreen"  Background="LightGray">
    <Grid>
        <Label Content="Edit values" HorizontalContentAlignment="Center" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="374" Foreground="#000000"/>
        <Label Content="Stroke thickness:" HorizontalAlignment="Left" Margin="10,55,0,0" VerticalAlignment="Top" Width="150" Foreground="#000000"/>
        <TextBox x:Name="thickness_tb" HorizontalAlignment="Left" VerticalContentAlignment="Center" Height="25" TextWrapping="Wrap" VerticalAlignment="Top" Width="200" Margin="170,55,0,0" Background="White" Foreground="#000000"/>
        <Label Content="Stroke color:" HorizontalAlignment="Left" Margin="10,90,0,0" VerticalAlignment="Top" Width="150" Foreground="#000000"/>
        <ComboBox Name="stroke_color_cb" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Margin="170,91,0,0"/>
        <Label Content="Fill color:" HorizontalAlignment="Left" Margin="10,130,0,0" VerticalAlignment="Top" Width="150" Foreground="#000000"/>
        <ComboBox x:Name="fill_color_cb" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Margin="170,131,0,0"/>


        <Label Content="Opacity:" HorizontalAlignment="Left" Margin="10,170,0,0" VerticalAlignment="Top" Width="150" Foreground="#000000"/>
        <TextBox x:Name="opacity_tb" HorizontalAlignment="Left" VerticalContentAlignment="Center" Height="25" TextWrapping="Wrap" VerticalAlignment="Top" Width="200" Margin="170,170,0,0" Background="White" Foreground="#000000"/>

        <Label Content="Text color:" HorizontalAlignment="Left" Margin="10,200,0,0" VerticalAlignment="Top" Width="150" Foreground="#000000"/>
        <ComboBox x:Name="text_color_cb" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Margin="170,201,0,0"/>

        <Button x:Name="edit_btn" Content="Edit" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="295,235,0,0" Background="White" Foreground="#000000" Click="edit_btn_Click"/>
        <Button x:Name="quit_btn" Content="Quit" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="210,235,0,0" Background="White" Foreground="#000000" Click="quit_btn_Click"/>
    </Grid>
</Window>
